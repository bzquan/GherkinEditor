            </Button>
            <Button ToolTip="{x:Static p:Resources.Tooltip_OpenFile}"
                    Command="Open">
                <Image Source="Images/Open.png"
                       Height="16" />
            </Button>
            <Button ToolTip="{x:Static p:Resources.Tooltip_SaveFile}"
