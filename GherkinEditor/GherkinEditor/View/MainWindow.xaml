                    </MenuItem.Icon>
                    <MenuItem Header="English"
                              Command="{Binding GherkinSettings.ChangeLanguageCmd}"
                              CommandParameter="English">
                        <MenuItem.Icon>
                            <Image Source="Images/en.png"
                                   Height="12" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="日本語"
