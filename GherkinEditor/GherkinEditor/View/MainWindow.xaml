                    <MenuItem.Icon>
                        <Image Source="Images/Table.png"
                               Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem IsCheckable="True"
                          Header="{x:Static p:Resources.MenuView_FoldScenario}"
                          IsChecked="{Binding IsCloseScenarioFolding}">
                    <MenuItem.Icon>
                        <Image Source="Images/Scenario.png"
                               Height="16" />
                    </MenuItem.Icon>
