                </MenuItem>
                <MenuItem Command="Paste"
                          Header="{x:Static p:Resources.MenuEdit_Paste}"
                          InputGestureText="Ctrl+V">
                    <MenuItem.Icon>
                        <Image Source="Images/Paste.png"
                               Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Command="SelectAll"
