                    <MenuItem.Icon>
                        <Image Source="Images/OpenAllFoldings.png"
                               Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem IsCheckable="True"
                          Header="{x:Static p:Resources.MenuView_ShowScenarioIndex}"
